<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Starling Demo" package="StarlingDemo" version="1.0.0" company="P.J.Shand" />
	
	<!-- output -->
	<app main="sample.Main" file="StarlingDemo" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="320" height="480" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<source path="../../src" />
	
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="format" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/audio" rename="assets/audio" />
	<assets path="assets/fonts" rename="assets/fonts" />
	<assets path="assets/textures" rename="assets/textures" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
	<app swf-version="17"/>
	
	<haxedef name="source-map-content" if="html5" />
	<haxedef name="dom" if="html5" />
	
</project>